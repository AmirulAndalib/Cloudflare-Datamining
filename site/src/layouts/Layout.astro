---
import Header from '../components/Header.astro';
export interface Props {
	title: string;
}

const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header></Header>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark;
	}
</style>
