{
	"allOf": [
		{
			"$ref": "#/components/schemas/RuleRequest"
		},
		{
			"properties": {
				"categories": {
					"description": "The categories of the rule.",
					"example": [
						"directory-traversal",
						"header"
					],
					"items": {
						"$ref": "#/components/schemas/RuleCategory"
					},
					"type": "array"
				},
				"last_updated": {
					"description": "The timestamp of when the rule was last modified.",
					"example": "2000-01-01T00:00:00.000000Z",
					"type": "string"
				},
				"version": {
					"description": "The version of the rule.",
					"example": "1",
					"pattern": "^[0-9]+$",
					"type": "string"
				}
			},
			"required": [
				"id",
				"version",
				"expression",
				"action",
				"ref",
				"enabled",
				"last_updated"
			]
		}
	]
}