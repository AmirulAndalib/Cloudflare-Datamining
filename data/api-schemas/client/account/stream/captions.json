				"properties": {
					"X-Auth-Email": {
						"description": "Your Cloudflare email",
						"type": "string",
						"example": "user@example.com"
					},
					"X-Auth-Key": {
						"description": "Your Cloudflare API key",
						"type": "string",
						"minLength": 45,
						"maxLength": 45,
						"example": "c2547eb745079dac9320b638f5e225cf483cc5cfdda41"
					}
				}
			},
