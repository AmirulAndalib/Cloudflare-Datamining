{
	"alias": "planetscale-for-workers",
	"install_target": "worker",
	"name": "PlanetScale",
	"description": "MySQL-compatible platform that makes databases infinitely scalable, easier and safer to manage.",
	"icon_url": "https://imagedelivery.net/wSMYJvS3Xw-n339CbDyDIA/16233c73-c18b-4f80-5a73-685798678100/public",
	"docs_url": "https://developers.cloudflare.com/workers/learning/integrations/databases/#planetscale",
	"category": "workers-databases",
	"version": "0.0.5",
	"permissions": {
		"scopes": {
			"account": [
				{
					"group": "Workers Scripts Write",
					"reason": "Needed for adding secrets to your Worker."
				}
			]
		},
		"submit_action": "submit-cloudflare-token"
	},
	"setup_steps": [
		{
			"title": "Connect to PlanetScale",
			"type": "oauth",
			"provider": "planetscale",
			"client_id": "pscale_app_d1e2fb6faf16932e930077bb80ba0d21",
			"authorize_url": "https://app.planetscale.com/oauth/authorize",
			"grant_type": "authorization_code",
			"submit_action": "submit-planetscale-oauth"
		},
		{
			"title": "Select an organization",
			"type": "form",
			"components": [
				{
					"type": "select_input",
					"name": "organizationName",
					"label": "Organization",
					"description": "Organizations linked to your PlanetScale account are displayed here.",
					"required": true,
					"options": {
						"type": "action",
						"action": "get-planetscale-organizations"
					}
				}
			],
			"submit_action": "submit-planetscale-organization"
		},
		{
			"title": "Select a database",
			"type": "form",
			"components": [
				{
					"type": "select_input",
					"name": "databaseName",
					"label": "Database",
					"description": "Your PlanetScale databases are displayed here.",
					"required": true,
					"options": {
						"type": "action",
						"action": "get-planetscale-databases"
					}
				},
				{
					"type": "select_input",
					"name": "userRole",
					"label": "User role",
					"description": "Cloudflare will create a user with this role to access the database selected above.",
					"required": true,
					"options": {
						"type": "static",
						"static": [
							{
								"label": "Reader",
								"value": "reader"
							},
							{
								"label": "Writer",
								"value": "writer"
							},
							{
								"label": "Administrator",
								"value": "admin"
							},
							{
								"label": "Read-Writer",
								"value": "readwriter"
							}
						]
					}
				}
			],
			"submit_action": "submit-planetscale-database"
		},
		{
			"title": "Select a branch",
			"type": "form",
			"components": [
				{
					"type": "select_input",
					"name": "branchName",
					"label": "Branches",
					"description": "Branches for the selected database are displayed here.",
					"required": true,
					"options": {
						"type": "action",
						"action": "get-planetscale-branches"
					}
				}
			],
			"submit_action": "submit-planetscale-branch"
		},
		{
			"title": "Configure Secrets",
			"type": "form",
			"components": [
				{
					"type": "mapping_input",
					"name": "secretsMap",
					"label": "Secrets",
					"description": "The above Secrets will be added to the existing Environment Variables of this Worker.",
					"required": true,
					"left_label": "Secret Name",
					"right_label": "Value",
					"rows": {
						"type": "static",
						"content": [
							{
								"left_component": {
									"type": "text_input",
									"name": "databaseHostSecretName",
									"required": true,
									"default_value": "DATABASE_HOST"
								},
								"right_component": {
									"type": "markdown",
									"content": {
										"type": "data_driven",
										"data_name": "databaseHost"
									}
								}
							},
							{
								"left_component": {
									"type": "text_input",
									"name": "databaseUsernameSecretName",
									"required": true,
									"default_value": "DATABASE_USERNAME"
								},
								"right_component": {
									"type": "markdown",
									"content": {
										"type": "data_driven",
										"data_name": "databaseUsername"
									}
								}
							},
							{
								"left_component": {
									"type": "text_input",
									"name": "databasePasswordSecretName",
									"required": true,
									"default_value": "DATABASE_PASSWORD"
								},
								"right_component": {
									"type": "markdown",
									"content": {
										"type": "static",
										"static": "xxxxxxxxxxxx"
									}
								}
							}
						]
					}
				}
			],
			"submit_action": "submit-secrets-map"
		}
	],
	"get_data_action": "get-data",
	"uninstall_action": "uninstall"
}
